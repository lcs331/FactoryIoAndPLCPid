<UserControl x:Class="FactoryIoAndPLCPid.views.RealTimeMonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactoryIoAndPLCPid.views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1250">

    <Border Margin="10" CornerRadius="10"
            >
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#337FA8DA" Offset="0"/>
                <GradientStop Color="#FF1E3C5A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主标题 -->
        <Border Background="#801A1A1A" Padding="15,10" CornerRadius="10,10,0,0" >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 状态指示灯 -->
                <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Margin="0,0,10,0">
                    <Ellipse.Fill>
                        <SolidColorBrush x:Name="StatusBrush" Color="#FF00FF00"/>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="5"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- 主标题 -->
                <TextBlock Text="PID实时监控" FontFamily="Segoe UI Variable Display" FontSize="20" FontWeight="SemiBold">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF00E0FF" Offset="0.0"/>
                            <GradientStop Color="#FF0080FF" Offset="1.0"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4000E0FF"/>
                    </TextBlock.Effect>
                </TextBlock>

            </StackPanel>
        </Border>

            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <UniformGrid  Columns="5">
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="10" Margin="5" Width="80" Height="70">
                        <StackPanel>
                            <TextBlock Text="DI 状态" FontSize="10" Foreground="#80FFFFFF" TextAlignment="Center"/>
                            <TextBlock  Text="正常" FontSize="14" FontWeight="Bold" 
                             Foreground="#FF00FF00" TextAlignment="Center" Margin="0,2,0,0"/>
                            <TextBlock Text="设备启动" FontSize="9" Foreground="#CCFFFFFF" TextAlignment="Center"/>
                        </StackPanel>
                       </Border>
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="10" Margin="5" Width="80" Height="70">
                        <StackPanel>
                            <TextBlock Text="DI 状态" FontSize="10" Foreground="#80FFFFFF" TextAlignment="Center"/>
                            <TextBlock  Text="正常" FontSize="14" FontWeight="Bold" 
                                       Foreground="#FF00FF00" TextAlignment="Center" Margin="0,2,0,0"/>
                            <TextBlock Text="设备异常" FontSize="9" Foreground="#CCFFFFFF" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="10" Margin="5" Width="80" Height="70">
                        <StackPanel>
                            <TextBlock  Text="DI 状态" FontSize="10" Foreground="#80FFFFFF" TextAlignment="Center"/>
                            <TextBlock  Text="正常" FontSize="14" FontWeight="Bold" 
                                        Foreground="#FF00FF00" TextAlignment="Center" Margin="0,2,0,0"/>
                            <TextBlock Text="停止指示" FontSize="9" Foreground="#CCFFFFFF" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="10" Margin="5" Width="80" Height="70">
                        <StackPanel>
                            <TextBlock Text="DI 状态" FontSize="10" Foreground="#80FFFFFF" TextAlignment="Center"/>
                            <TextBlock  Text="正常" FontSize="14" FontWeight="Bold" 
                                         Foreground="#FF00FF00" TextAlignment="Center" Margin="0,2,0,0"/>
                            <TextBlock Text="启动指示" FontSize="9" Foreground="#CCFFFFFF" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1AFFFFFF" CornerRadius="4" Padding="10" Margin="5" Width="80" Height="70">
                        <StackPanel>
                            <TextBlock Text="DI 状态" FontSize="10" Foreground="#80FFFFFF" TextAlignment="Center"/>
                            <TextBlock  Text="正常" FontSize="14" FontWeight="Bold" 
                                        Foreground="#FF00FF00" TextAlignment="Center" Margin="0,2,0,0"/>
                            <TextBlock Text="从站液体罐" FontSize="9" Foreground="#CCFFFFFF" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                <Grid Grid.Row="1" Margin="40">
                    <lvc:CartesianChart >
                        <lvc:CartesianChart.Series>
                        <lvc:LineSeries Values=""
                                        PointGeometrySize="0"
                                        Stroke="LightBlue"
                                        Title="水位"
                                        Visibility="Visible"
                                        >
                                <lvc:LineSeries.Fill>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="#22FF9900" Offset="0"/>
                                        <GradientStop Color="#0000" Offset="1"/>
                                    </LinearGradientBrush>
                                </lvc:LineSeries.Fill>
                            </lvc:LineSeries>
                            <lvc:LineSeries Values=""
                                            PointGeometrySize="0"
                                            Stroke="Orange"
                                            Title="出水速率"
                                            Visibility="Visible"
                                            >
                                <lvc:LineSeries.Fill>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="#22FF9900" Offset="0"/>
                                        <GradientStop Color="#0000" Offset="1"/>
                                    </LinearGradientBrush>
                                </lvc:LineSeries.Fill>
                            </lvc:LineSeries>
                            <lvc:LineSeries Values=""
                                            PointGeometrySize="0"
                                            Stroke="Green"
                                            Title="进水阀门"
                                            Visibility="Visible"
                                            >
                                <lvc:LineSeries.Fill>
                                    <LinearGradientBrush StartPoint="0,0"
                                  EndPoint="0,1">
                                        <GradientStop Color="#22FF9900" Offset="0"/>
                                        <GradientStop Color="#0000" Offset="1"/>
                                    </LinearGradientBrush>
                                </lvc:LineSeries.Fill>
                            </lvc:LineSeries>
                            <lvc:LineSeries Values=""
                                            PointGeometrySize="0"
                                            Stroke="White"
                                            Title="出水阀门"
                                            Visibility="Visible"
                        >
                                <lvc:LineSeries.Fill>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="#22FF9900" Offset="0"/>
                                        <GradientStop Color="#0000" Offset="1"/>
                                    </LinearGradientBrush>
                                </lvc:LineSeries.Fill>
                            </lvc:LineSeries>

                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="{Binding XLabels}" Foreground="#3FFF">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" MaxValue="100"  Foreground="#3FFF">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="20" StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Grid>

            <StackPanel Grid.Row="2" >
                <Border Height="40" Grid.ColumnSpan="2" Background="#1AFFFFFF" Padding="5">
                    <TextBlock Text="消息：PID启动成功..." Foreground="White"/>
                </Border>
            </StackPanel>
        </Grid> 
    </Border>
</UserControl>
