<UserControl x:Class="FactoryIoAndPLCPid.views.MYUserControl.HeartbeatUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactoryIoAndPLCPid.views.MYUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Grid>
        <!-- 爱心形状 -->
        <Path x:Name="HeartPath"
              Fill="{Binding TheBackground, RelativeSource={RelativeSource AncestorType={x:Type local:HeartbeatUser}}}"
              Stretch="Uniform"
              Data="M 50,30 
                    A 20,20 0 0,1 90,30
                    A 20,20 0 0,1 130,30
                    Q 130,60 90,100
                    Q 50,60 50,30 Z">
            <Path.RenderTransform>
                <ScaleTransform x:Name="HeartScale" ScaleX="1" ScaleY="1" CenterX="25" CenterY="35"/>
            </Path.RenderTransform>
        </Path>

        <!-- 心电图折线 -->
        <Polyline Stroke="White" StrokeThickness="1.2" Margin="30,30,10,10"
                  Points="2,15 8,15 10,10 12,20 14,15 20,15 22,8 24,25 26,15 38,15"/>

        <!-- 动画状态机 -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="HeartbeatStates">
                <!-- 不跳动 -->
                <VisualState x:Name="Stopped"/>

                <!-- 跳动 -->
                <VisualState x:Name="Beating">
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetName="HeartScale"
                                         Storyboard.TargetProperty="ScaleX"
                                         From="1" To="1.2"
                                         Duration="0:0:0.4"/>
                        <DoubleAnimation Storyboard.TargetName="HeartScale"
                                         Storyboard.TargetProperty="ScaleY"
                                         From="1" To="1.2"
                                         Duration="0:0:0.4"/>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
