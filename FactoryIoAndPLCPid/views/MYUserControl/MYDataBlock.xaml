<UserControl x:Class="FactoryIoAndPLCPid.views.MYUserControl.MYDataBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FactoryIoAndPLCPid.views.MYUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation  Duration="0:0:10"  Storyboard.TargetName="rt"  
                                      Storyboard.TargetProperty="Angle" From="0" To="360" 
                                     RepeatBehavior="Forever"/>
                    <DoubleAnimation  Duration="0:0:15"  Storyboard.TargetName="rt1"
                                    Storyboard.TargetProperty="Angle" From="0" To="-360"
                                     RepeatBehavior="Forever"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <Viewbox>
            <Grid Width="80" Height="80">
                <Ellipse Margin="-10" Stroke="#2200CFF8" StrokeThickness="8" StrokeDashArray="0.2,0.4"/>
                <Border BorderThickness="1" CornerRadius="40">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#995AF6FE" Offset="0"/>
                            <GradientStop Color="#0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <Border BorderThickness="1" CornerRadius="40" Margin="5">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                            <GradientStop Color="#285C90" Offset="0"/>
                            <GradientStop Color="#22285C90" Offset="0.5"/>
                            <GradientStop Color="#285C90" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <Border CornerRadius="40" Margin="8">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#11285C90" Offset="0.8"/>
                            <GradientStop Color="#44285C90" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>
                <Path Data="M0 28A28 28 0 0 1 28 0" Margin="12" StrokeThickness="5"
                    StrokeEndLineCap="Round"  RenderTransformOrigin="0.5,0.5" StrokeStartLineCap="Round" >
                    <Path.RenderTransform>
                        <RotateTransform Angle="0" x:Name="rt"/>
                    </Path.RenderTransform>
                    <Path.Stroke>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="#4FCCFF" Offset="0"/>
                            <GradientStop Color="#402876" Offset="1"/>
                        </LinearGradientBrush>
                    </Path.Stroke>
                </Path>
                <Path Data="M0 37A37 37 0 0 1 37 0" Stroke="#00CFF8" StrokeThickness="1"
                           Margin="3,3,3,3" RenderTransformOrigin="0.5,0.5"
                           StrokeDashArray="4,3,8,3,30" Grid.RowSpan="2">
                    <Path.RenderTransform>
                        <RotateTransform Angle="0" x:Name="rt1"/>
                    </Path.RenderTransform>
                </Path>
                <Border Margin="20" BorderThickness="1" CornerRadius="40" >
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#00285C90" Offset="0.7"/>
                            <GradientStop Color="#66285C90" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#285C90" Offset="0"/>
                            <GradientStop Color="#22285C90" Offset="0.5"/>
                            <GradientStop Color="#285C90" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                </Border>
                <TextBlock Foreground="Black" Margin="0,-9,0,0" 
                         VerticalAlignment="Center" HorizontalAlignment="Center">
                   <Run Text="{Binding Value,RelativeSource={RelativeSource AncestorType=UserControl},StringFormat={}{0:0}}" FontSize="10" />
                   <Run Text="%" FontSize="6" />
                </TextBlock>
                <TextBlock Text="{Binding Header,RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,25"
                           FontSize="8" Foreground="Black"/>
            </Grid>
        </Viewbox>

    </Grid>
</UserControl>
